qn=["1.What country has the highest life expectancy?\nA.HongKong B.Germany C.Canada D.India","2.What year was the United Nations established?\nA.1945 B.1946 C.1947 D.1948"]
ans=["A","A"]
count=0
for i in range(2):
    print(qn[i])
    opt=input("Your option: ")
    if(opt==ans[i]):
        count+=1
        print("Your Ans is Correct!!!")
    else:
        count-=1
        print("Your ans is wrong....")
print("Your final amount is: ",count*100)


